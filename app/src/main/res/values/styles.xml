<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigatorButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorBackgroundFloating">@color/pink</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ColorLineaDeEntradaDeTexto" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#717171</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="android:textColorHighlight">#cad46c4f</item>
    </style>

</resources>
