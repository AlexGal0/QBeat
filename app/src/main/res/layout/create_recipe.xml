<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/home_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/home_background">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear receta"


            android:textAlignment="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:fontFamily="@font/orangeblossoms"
            android:textSize="18sp"
            android:textColor="@color/backgroundSplash"
            android:textAllCaps="true"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre"

            android:inputType="textCapSentences|textAutoComplete"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/style_create_recipe_input_text"
            android:textColorHint="@color/backgroundSplash"
            />



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripci칩n"

                android:inputType="textCapSentences|textAutoComplete"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/style_create_recipe_input_text"
                android:textColorHint="@color/backgroundSplash"
                />



        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dificultad"

            android:layout_margin="10dp"
            android:fontFamily="@font/orangeblossoms"
            android:textColor="@color/backgroundSplash"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">


            <SeekBar
                android:id="@+id/picker_dificult"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:max="10" />

            <TextView
                android:id="@+id/dificult_view_create_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiempo"

            android:layout_margin="10dp"
            android:fontFamily="@font/orangeblossoms"
            android:textColor="@color/backgroundSplash"
            android:textSize="15sp"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

            <SeekBar
                android:id="@+id/picker_time"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:max="200" />

            <TextView
                android:id="@+id/time_view_create_recipe"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textAlignment="textEnd"
                android:paddingRight="2dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.5"
                android:text="Min"
                android:textAlignment="textStart"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:fontFamily="@font/orangeblossoms"
            android:padding="5dp"
            android:text="Ingredientes"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/backgroundSplash"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/container_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


        </LinearLayout>

        <Button
            android:id="@+id/add_ingredient_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A침adir Ingrediente"


            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textColor="@color/backgroundSplash"
            android:textAllCaps="true"
            android:textSize="11sp"
            android:fontFamily="@font/cryogenix"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasos"

            android:textAlignment="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:fontFamily="@font/orangeblossoms"
            android:textSize="15sp"
            android:textColor="@color/backgroundSplash"
            android:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/step_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/add_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A침adir paso"

            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textColor="@color/backgroundSplash"
            android:textAllCaps="true"
            android:textSize="11sp"
            android:fontFamily="@font/cryogenix"
            />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:fontFamily="@font/orangeblossoms"
            android:padding="5dp"
            android:text="Tag"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/backgroundSplash"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/tags_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/add_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A침adir Tag"

            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textColor="@color/backgroundSplash"
            android:textAllCaps="true"
            android:textSize="11sp"
            android:fontFamily="@font/cryogenix"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/image_create_recipe"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:src="@android:drawable/ic_menu_report_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBarCreateRecipe"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/remove_image_button"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="48dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="@drawable/background_progressbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_create_recipe"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/create_recipe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Receta"

            android:background="@drawable/style_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/update_recipe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Receta"

            android:background="@drawable/style_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textSize="11sp"/>
    </LinearLayout>
</ScrollView>