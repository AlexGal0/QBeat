<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_element_home_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    android:maxHeight="100dp"
    card_view:cardBackgroundColor="@color/card_backgroud"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:layout_constraintHeight_max="100dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"

            >

            <TextView
                android:id="@+id/chef_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="5"
                android:text="Autor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fecha_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Fecha"
                android:textAlignment="viewEnd"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"

            android:textAlignment="textStart"
            android:padding="4dp"

            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="0dp"

            android:fontFamily="@font/orangeblossoms"
            android:textSize="20sp"
            android:background="@drawable/tittle_background"
            />


        <TextView
            android:id="@+id/description_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Descripcion"
            android:textSize="13sp"
            android:paddingBottom="15dp"
            android:padding="5dp"
            android:background="@drawable/description_background"
            />

        <ImageView
            android:id="@+id/image_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:padding="5dp"
            android:src="@mipmap/santana" />

        <ProgressBar
            android:id="@+id/progress_card"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/load_button_image_card"
            style="@android:style/Widget.Material.Light.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Descargar imagen"

            android:background="@drawable/download_button"
            android:padding="10dp"
            android:layout_margin="5dp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>